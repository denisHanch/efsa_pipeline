nextflow.enable.dsl = 2

params {
  in_dir   = 'data/inputs'
  out_dir  = 'data/outputs'

  registry = "ghcr.io/kate-simonova"
  help = false
  log = true
  short_threshold = 10
  long_threshold = 20
  map_to_mod_fa = false
  PacBio_reads = false
}

docker.enabled = true

process {
  errorStrategy = 'finish'    // let all tasks run
}
