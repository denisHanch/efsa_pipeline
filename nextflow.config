nextflow.enable.dsl = 2

params {
  in_dir  = 'data/valid'
  out_dir = 'data/outputs'
  log_dir = 'data/outputs/logs'

  help = false
  log = true
  max_cpu = 1
  clean_work = false
  
  // Centralized container image map â€” update versions here (alphabetical by key)
  containers = [
    bcftools: 'staphb/bcftools:1.23',
    bwa: 'biocontainers/bwa:v0.7.17_cv1',
    cutesv: 'ecomolegmo/cutesv:v1.0.1',
    debreak: 'ecomolegmo/debreak:v1.0.1',
    delly: 'dellytools/delly:v1.7.2',
    fastqc: 'biocontainers/fastqc:v0.11.9_cv8',
    freebayes: 'biocontainers/freebayes:v1.2.0-2-deb_cv1',
    minimap2: 'staphb/minimap2:2.30',
    multiqc: 'staphb/multiqc:1.33',
    mummer: 'staphb/mummer:4.0.1',
    nanoplot: 'staphb/nanoplot:1.46.2',
    picard: 'quay.io/biocontainers/picard:2.26.10--hdfd78af_0',
    samtools: 'staphb/samtools:1.23',
    sniffles: 'ecomolegmo/sniffles:v1.0.1',
    snpeff: 'biocontainers/snpeff:v4.1k_cv3',
    survivor: 'ecomolegmo/survivor:v1.0.1',
    syri: 'ecomolegmo/syri:v1.0.1',
    trimgalore: 'vibsinglecellnf/trimgalore:trimgalore-0.6.7-cutadapt-4.1',
    truvari: 'ecomolegmo/truvari:v1.0.1'
  ]
}

docker.enabled = true

process {
  errorStrategy = 'ignore'    // let all tasks finish even if one task ends up with error
}

