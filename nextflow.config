nextflow.enable.dsl = 2

params {
  in_dir   = 'data/inputs'
  out_dir  = 'data/outputs'

  help = false
  log = true
}

docker.enabled = true


profiles {
  docker {
    process.executor  = 'local'
    process.container = null // overridden per-module
  }
}

process {
  errorStrategy = 'finish'    // let all tasks run
}
