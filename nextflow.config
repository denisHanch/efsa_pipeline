nextflow.enable.dsl = 2

params {
  in_dir  = 'data/valid'
  out_dir = 'data/outputs'
  log_dir = 'data/outputs/logs'

  registry = "ghcr.io/kate-simonova"
  help = false
  log = true
  max_cpu = 1
  clean_work = true
}

docker.enabled = true

process {
  errorStrategy = 'finish'    // let all tasks run
}

