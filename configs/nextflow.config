params {
  in_dir   = 'data/inputs'
  out_dir  = 'data/outputs'
  steps    = 'fastqc,trimming,multiqc'  // default order
}

profiles {
  docker {
    process.executor  = 'local'
    process.container = null // overridden per-module
  }
}

process {
  errorStrategy = 'finish'    // let all tasks run
}
