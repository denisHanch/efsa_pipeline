#!/usr/bin/env bash
set -euo pipefail

# Resolve the directory where this script lives
script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
repo_root="$script_dir"

# Switch into the repo root so Nextflow picks up main.nf + nextflow.config
cd "$repo_root"


# Delegate to Nextflow, passing all arguments through
echo "Launching Nextflow: nextflow $*"
exec nextflow run . -c configs/nextflow.config "$@"
