{
    "name": "Python Dev Container",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "customizations": {
        "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
        },
        "extensions": [
            "ms-python.python"
        ]
    },
    "workspaceFolder": "/efsa_pipeline",
    "runArgs": [
      "--privileged",                   // Grants all extended privileges
      "--cap-add=sys_admin",            // Allows system administration
      "--cap-add=net_admin",            // Allows network administration
      "--cap-add=mknod",                // Allows device node creation
      "--cap-add=chown",                // Allows changing file ownership
      "--cap-add=DAC_OVERRIDE"  
  ],
  "mounts": [
      "source=${localWorkspaceFolder},target=/efsa_pipeline,type=bind",
      // "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
      // "source=/lib/modules,target=/lib/modules,type=bind,consistency=cached"
  ],
  "postStartCommand": "dockerd --host=unix:///var/run/docker.sock --host=tcp://0.0.0.0:2375 &"
}
  