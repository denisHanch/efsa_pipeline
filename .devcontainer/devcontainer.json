
{
  "name": "EFSA Pipeline Dev",

  // Build the container from your Dockerfile.dev
  "build": {
    "dockerfile": "Dockerfile.dev",
    "context": "."
  },


  "workspaceFolder": "/EFSA_workspace",
  
  // User inside container
  "remoteUser": "root",

  // to avoid "fatal: detected dubious ownership in repository at" error
  "postCreateCommand": "git config --file .git/config --add safe.directory ${containerWorkspaceFolder}",

  // VS Codeâ€“specific customizations
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/usr/local/bin/python3"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "njpwerner.autodocstring"
      ]
    }
  },

  "mounts": [
    // mount repo into workspaceFolder
    "source=${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind,consistency=cached",

    // allow Docker-in-Docker (user must be in docker group or root)
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",

    // bind data folders
    "source=${localWorkspaceFolder}/data/inputs,target=${containerWorkspaceFolder}/data/inputs,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/data/outputs,target=${containerWorkspaceFolder}/data/outputs,type=bind,consistency=cached",

    // Add you git identity into container
    //"source=${env:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached",
    // Forward local ssh-agent into dev container
    // "source=${env:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
  ],

  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  }

}
  